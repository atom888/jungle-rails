<h1>Login</h1>

<%= form_tag '/login' do %>

<div class="signup-table">
  <table class="table table-reflow">
    <thead>
        <tr>
          <td>
           Email: <%= text_field_tag :email %>
          </td>
        </tr>
        <tr>
          <td>
          Password: <%= password_field_tag :password %>
          </td>
        </tr>
        <tr>
          <td>
          <%= submit_tag "Submit" %>
          </td>
        </tr>
    </thead>
  </table>
</div>
<% end %>